<% wrap_layout :layout do %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>
          <%= current_page.title %> <small><%= current_page.date.strftime('%b %e') %></small>
          <img class="pull-right" src="https://graph.facebook.com/<%= current_page.data.author %>/picture" />
        </h2>
      </div>
      <div class="panel-body">
        <%= yield %>
      </div>
    </div>
<% end %>