@charset "utf-8";

$gray1: #9DA0A4;
$gray2: #6A6E71;
$gray3: #45494B;
$gray4: #24282A;
$lightgray1: #EBEDEF;
$lightgray2: #D7DBDF;
$lightergray1: #f5f5f5;
$blue1: #00A4BB;
$blue2: #006F8E;
$red1: #FF3333;
$red2: #F55B3E;
$green1: #6CC644;
$yellow1: #FED100;
$yellow2: #FFE675;
$bluegray1: #e8eff0;

$brand-primary: $blue1;
$text-color: $gray3;

@import "bootstrap";
@import "highlight";
@import url(http://fonts.googleapis.com/css?family=Graduate);

* {
  color: $text-color;
}

ul {
  list-style: disc;
  padding-left: 30px;
}

img {
  max-width: 100%;
}

table, td, th {
  border: 1px #CCC solid;
  padding: 6px;
}

footer p {
  color: $gray1;
}

.graduate {
  font-family: 'Graduate', 'Helvetica Neue', Helvetica, Arial, 'Droid Sans', 'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ Pro W3', 'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', sans-serif;
}

.gray {
  color: $gray1;
}

.center {
  text-align: center;
}

.cover-image {
  background-image: url('/images/header_bg.png');
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  padding: 100px !important;
}

.cover-image * {
  color: white;
}

.cover-image a, .cover-image a:hover{
  text-decoration: none;
  color: #fff;
}

.side-article {
  margin-top: 30px;
}

.article {
  line-height: 1.7;
  h2 {
    margin-top: 40px;
    margin-bottom: 20px;
  }
  p {
    margin: 0 0 20px 0;
  }
}
