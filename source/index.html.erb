---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
    <div class="page-header">
      <h2>
        <%= link_to article.title, article %> <small><%= article.date.strftime('%b %e') %></small>
        <a href="<%= "https://www.wantedly.com/users/#{article.data.wantedly_id}" %>">
          <img class="pull-right" src="https://graph.facebook.com/<%= article.data.facebook_id %>/picture" />
        </a>
      </h2>
    </div>
    <!-- use article.summary(250) if you have Nokogiri available to show just the first 250 characters -->
    <%= article.body %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
